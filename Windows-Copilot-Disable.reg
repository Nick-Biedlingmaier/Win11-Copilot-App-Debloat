Windows Registry Editor Version 5.00

; -------------------------------
; Disable Windows Copilot via Taskbar
; -------------------------------
[HKEY_CURRENT_USER\Software\Microsoft\Windows\CurrentVersion\Explorer\Advanced]
"ShowCopilotButton"=dword:00000000

; -------------------------------
; Disable Windows Copilot via Group Policy equivalent
; -------------------------------
[HKEY_LOCAL_MACHINE\SOFTWARE\Policies\Microsoft\Windows\WindowsCopilot]
"TurnOffWindowsCopilot"=dword:00000001

; -------------------------------
; Disable AI Features in Paint
; -------------------------------
[HKEY_CURRENT_USER\Software\Microsoft\Windows\CurrentVersion\Applets\Paint]
"DisableAI"=dword:00000001

; -------------------------------
; Disable Smart Actions (AI) in Snipping Tool
; -------------------------------
[HKEY_CURRENT_USER\Software\Microsoft\Windows\SnippingTool]
"DisableSmartActions"=dword:00000001

; -------------------------------
; Disable Bing Search in Windows Search (removes Copilot-style answers)
; -------------------------------
[HKEY_CURRENT_USER\Software\Policies\Microsoft\Windows\Explorer]
"DisableSearchBoxSuggestions"=dword:00000001

; -------------------------------
; Hide Search Highlights (Optional - for a cleaner look)
; -------------------------------
[HKEY_CURRENT_USER\Software\Microsoft\Windows\CurrentVersion\SearchSettings]
"IsDynamicSearchBoxEnabled"=dword:00000000